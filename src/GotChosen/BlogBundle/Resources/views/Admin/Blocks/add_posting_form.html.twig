{{ form_start(postForm) }}
    {{ form_errors(postForm) }}

    <div class="row form-group">
        {{ form_label(postForm.postTitle) }}
        {{ form_errors(postForm.postTitle) }}
        <div class='col-xs-4'>
            {{ form_widget(postForm.postTitle) }}
        </div>
    </div>

    <div class="row form-group">
        {{ form_label(postForm.postBody) }}
        {{ form_errors(postForm.postBody) }}
        <div class='col-xs-4'>
            {{ form_widget(postForm.postBody) }}
        </div>
    </div>

    <div class="row form-group">
        {{ form_label(postForm.poster) }}
        {{ form_errors(postForm.poster) }}
        <div class='col-xs-4'>
            {{ form_widget(postForm.poster) }}
        </div>
    </div>

    <div class="row form-group">
        <div class='col-xs-2'>{{ form_label(postForm.tags) }}</div>
            <ul style="list-style-type: none;" class="tags col-xs-4" data-prototype="{{ form_widget(postForm.tags.vars.prototype)|e }}">
           {# iterate over each existing tag and render its only field: name #}
           {% for tag in postForm.tags %}
               <li>{{ form_row(tag.name) }}</li>
           {% endfor %}
        </ul>

    </div>

    <div class="row form-group">
        {{ form_widget(postForm.save) }}
    </div>

    {{ form_row(postForm._token) }}

{{ form_end(postForm) }}

<script src="{{ asset('bundles/gotchosenblog/js/add_posting_form.js') }}"></script>

