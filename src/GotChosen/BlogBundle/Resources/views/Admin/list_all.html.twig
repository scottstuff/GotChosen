{% extends "::base.html.twig" %}
{% block title %}GotChosen | Add Post{% endblock %}
{% block body %}
    <div class="container">
        {% include 'GotChosenBlogBundle:Default:Blocks/nav.html.twig' %}
        <!-- Main component for a primary marketing message or call to action -->
        <div class="jumbotron">
            <h2 class="title">List Authors, Posts and Tags</h2>
                <h3>Authors</h3>
                    <ul>
                    {% for user in users %}
                        <li><a href='user_view?id={{ user.id }}'>{{ user.firstName }} {{ user.lastName }}</a></li>
                    {% endfor %}
                    </ul>
                    <p><a class="btn btn-lg btn-primary" href='add_user'>Add Author</a></p>

                <h3>Posts</h3>
                    <ul>
                    {% for posting in postings %}
                        <li><a href='posting_view?id={{ posting.id }}'>{{ posting.postTitle }} - {{ posting.createdAt|date('l, F jS, Y h:i:s A') }}</a></li>
                    {% endfor %}
                    </ul>
                    <p><a class="btn btn-lg btn-primary" href='add_posting'>Add Post</a></p>

                <h3>Tags</h3>
                    <ul>
                    {% for tagging in taggings %}
                        <li><a href='tagging_view?id={{ tagging.id }}'>{{ tagging.name }}</a></li>
                    {% endfor %}
                    </ul>
        </div>
    </div>

{% endblock %}